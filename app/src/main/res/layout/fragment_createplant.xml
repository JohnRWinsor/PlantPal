<?xml version="1.0" encoding="utf-8"?>

<!--    Defines the layout for adding a new plant. Includes various input fields such as species, nickname,
    and seek bars for water and light levels. Also includes buttons for confirming the input and navigating
    back. -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SeekBar for water level -->
    <SeekBar
        android:id="@+id/seekBarWater"
        android:layout_width="159dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <!-- Input field for plant species -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <!-- Label indicating it's for adding a new plant -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="New Plant"
        android:textColor="#029300"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Placeholder for displaying an image of the plant -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="129dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/baseline_image_24" />

    <!-- Button for capturing a photo of the plant -->
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="51dp"
        android:layout_height="40dp"
        android:layout_marginTop="108dp"
        android:clickable="true"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/baseline_camera_alt_24"
        android:focusable="true" />

    <!-- Button for selecting an image of the plant from gallery -->
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/baseline_image_search_24" />

    <!-- Label for the nickname input field -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="134dp"
        android:layout_height="31dp"
        android:layout_marginTop="36dp"
        android:text="Nickname"
        android:textAlignment="center"
        android:textColor="#A13D1E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <!-- Input field for entering plant nickname -->
    <EditText
        android:id="@+id/editNickname"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="355dp" />

    <!-- Label for the species input field -->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="108dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:text="Species"
        android:textAlignment="center"
        android:textColor="#A13D1E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNickname" />

    <!-- Button for confirming the input and adding the new plant -->
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="52dp"
        android:layout_height="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_check_24" />

    <!-- Icon indicating tips or suggestions -->
    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="41dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        app:srcCompat="@drawable/baseline_lightbulb_24" />

    <!-- SeekBar for light level -->
    <SeekBar
        android:id="@+id/seekBarlight"
        android:layout_width="159dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <!-- Icon for adjusting color inversion, possibly related to plant health -->
    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="36dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarlight"
        app:srcCompat="@drawable/baseline_invert_colors_24" />

    <!-- Button for navigating back to the previous screen -->
    <ImageButton
        android:id="@+id/imageButtonNewBack"
        android:layout_width="52dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
