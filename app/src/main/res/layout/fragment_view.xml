<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="45%"
        app:layout_constraintStart_toEndOf="@+id/textViewHum"
        tools:layout_editor_absoluteY="536dp" />

    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="HIGH"
        android:textColor="#74D602"
        app:layout_constraintStart_toEndOf="@+id/textViewMoist"
        tools:layout_editor_absoluteY="485dp" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="76dp"
        android:text="Temperature"
        android:textColor="#029300 "
        app:layout_constraintEnd_toStartOf="@+id/textViewDegree"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHappy" />

    <TextView
        android:id="@+id/textViewPlantName"
        android:layout_width="255dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:text="Plant Name"
        android:textAlignment="center"
        android:textColor="#029300"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewImage"
        android:layout_width="122dp"
        android:layout_height="119dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewHappy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantName"
        app:srcCompat="@drawable/baseline_image_24" />

    <ImageView
        android:id="@+id/imageViewHappy"
        android:layout_width="86dp"
        android:layout_height="84dp"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlantName"
        app:srcCompat="@drawable/happy" />

    <TextView
        android:id="@+id/textViewHum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Air Humidty"
        android:textColor="#029300 "
        app:layout_constraintTop_toBottomOf="@+id/textViewMoist"
        tools:layout_editor_absoluteX="97dp" />

    <TextView
        android:id="@+id/textViewMoist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Moisture Level"
        android:textColor="#029300 "
        app:layout_constraintTop_toBottomOf="@+id/textViewTemp"
        tools:layout_editor_absoluteX="97dp" />

    <TextView
        android:id="@+id/textViewDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="136dp"
        android:text="18Â°"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHappy" />
</androidx.constraintlayout.widget.ConstraintLayout>